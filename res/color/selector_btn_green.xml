<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <padding android:bottom="12dp" android:left="20dp" android:right="20dp" android:top="12dp" />

            <solid android:color="#31d377" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <padding android:bottom="12dp" android:left="20dp" android:right="20dp" android:top="12dp" />

            <solid android:color="@color/base_gray" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>
    <item><shape>
            <padding android:bottom="12dp" android:left="20dp" android:right="20dp" android:top="12dp" />

            <solid android:color="#18cd66" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>

</selector>