<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <padding android:left="15dp" android:right="15dp" />

            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@color/base_black_333333" />
        </shape></item>
    <item android:state_focused="false"><shape>
            <padding android:left="15dp" android:right="15dp" />

            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@color/base_black_999999" />
        </shape></item>

</selector>