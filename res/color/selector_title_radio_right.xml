<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <padding android:bottom="5dp" android:left="12dp" android:right="12dp" android:top="5dp" />

            <solid android:color="@color/base_beige_white" />

            <stroke android:width="1dp" android:color="@color/base_beige_white" />

            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>
    <item android:state_checked="false"><shape>
            <padding android:bottom="5dp" android:left="12dp" android:right="12dp" android:top="5dp" />

            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@color/base_beige_white" />
            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>

</selector>