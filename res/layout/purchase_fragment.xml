<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <!-- 采购清单表 表头 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            layout="@layout/purchase_fragment_list_item"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_title_height"
            android:background="@color/base_gray"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <!-- 采购批次号 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="采购批次号"
                android:textColor="@color/base_black_333333" />
            <!-- 采购时间 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="采购时间"
                android:textColor="@color/base_black_333333" />
            <!-- 采购数量 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="采购数量"
                android:textColor="@color/base_black_333333" />
            <!-- 采购总额 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="采购总额"
                android:textColor="@color/base_black_333333" />
        </LinearLayout>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/refreshListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:divider="@color/base_gray"
            android:dividerHeight="1px"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/base_gray"
            ptr:ptrAnimationStyle="flip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_subtitle_height"
            android:background="@color/base_gray"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="总数："
                android:textColor="@color/base_black_333333" />

            <TextView
                android:id="@+id/tvPurchaseCounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="start"
                android:text="0"
                android:textColor="@color/base_btn_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/btnToNewPurchaseRecord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/base_btn_blue"
                android:gravity="center"
                android:text="新增"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/base_gray_60" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="系统批次号"
                    android:textColor="@color/base_black_333333" />

                <com.globalways.csscli.view.ClearableEditText
                    android:id="@+id/et_batch_id"
                    style="@style/EditTextStye"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="自定批次号"
                    android:textColor="@color/base_black_333333" />

                <com.globalways.csscli.view.ClearableEditText
                    android:id="@+id/et_out_id"
                    style="@style/EditTextStye"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="总价"
                    android:textColor="@color/base_black_333333" />

                <com.globalways.csscli.view.ClearableEditText
                    android:id="@+id/et_total"
                    style="@style/EditTextStye"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:inputType="numberDecimal" />
            </TableRow>
        </TableLayout>

        <!-- purchase detail -->

        <LinearLayout
            android:id="@+id/viewPurchaseDetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购货物列表"
                android:textColor="@color/base_orange" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_gray" />
            
            <include
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                layout="@layout/purchase_fragment_goods_list_item" />

            <ListView
                android:id="@+id/lvPurchaseGoodsFromWeb"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"
                android:divider="@null"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购图片"
                android:textColor="@color/base_orange" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_gray" />

            <GridView
                android:id="@+id/gvPurchaseWebAvatars"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:numColumns="3" />
            <TextView
                android:id="@+id/tvNoPurchasePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无图片"/>
            
        </LinearLayout>

        <!-- new purchase -->

        <LinearLayout
            android:id="@+id/llNewPurchaseView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:id="@+id/hsv_HorizontalSrcollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" >

                    <GridView
                        android:id="@+id/gv_purchase_avatars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:scrollbars="horizontal" />
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/rl_goods_list_title"
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="货品列表"
                    android:textColor="@color/base_black_333333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnScanGoods"
                    style="@style/BtnBlue"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="扫描货物" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                layout="@layout/purchase_fragment_goods_list_item" />

            <ListView
                android:id="@+id/lv_purchase_detail_goods"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSaveNewPurchaseRecord"
                style="@style/BtnOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="保存" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>