<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<TextView android:id="@+id/tvRankNum"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="排行"/>
	
	<TextView android:id="@+id/tvProductName"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="商品名称"/>
	
	<TextView android:id="@+id/tvSalesCount"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="销售数量"/>
	
	<TextView android:id="@+id/tvPurchaseTotal"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="采购金额"/>
	
	<TextView android:id="@+id/tvSalesTotal"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="销售金额"/>
	
	<TextView android:id="@+id/tvMaoriTotal"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="销售毛利"/>
	
	<TextView android:id="@+id/tvStock"
	    android:layout_width="0dp"
	    android:layout_height="80dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:textColor="@color/base_black_333333"
	    android:text="现有库存"/>

</LinearLayout>