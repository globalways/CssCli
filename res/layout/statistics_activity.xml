<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view"
    style="@style/ActivityOuterStyle"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radioSallStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_stat_radio_bg"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/icon_sell"
                android:padding="20dp"
                android:text="销售统计"
                android:textColor="#333333" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_gray" />

            <RadioButton
                android:id="@+id/radioBuyStatistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_stat_radio_bg"
                android:button="@null"
                android:drawableTop="@drawable/icon_buy"
                android:padding="20dp"
                android:text="采购统计"
                android:textColor="#333333" />
        </RadioGroup>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/base_gray" />

        <RelativeLayout
            android:id="@+id/viewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>