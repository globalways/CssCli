<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- settles list -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" >

            <Button
                android:id="@+id/btnSettleStatus"
                style="@style/BtnGray"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:text="status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/btnSettleStatus"
                android:text="点击查看各状态工单列表" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/base_gray" />

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/refreshListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:divider="@color/base_gray"
            android:dividerHeight="1px"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@color/base_gray"
            ptr:ptrAnimationStyle="flip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_subtitle_height"
            android:background="@color/base_gray" >

            <TextView
                android:id="@+id/tvSettlesNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="234"
                android:textColor="@color/base_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tvSettlesNum"
                android:text="当前工单数目:"
                android:textColor="@color/base_black_333333" />

            <TextView
                android:id="@+id/btnToNewSettle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/base_btn_blue"
                android:gravity="center"
                android:text="新增"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/base_gray" />

    <LinearLayout
        android:id="@+id/viewSettleDetail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical" >

        <!-- settle infos -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <TextView
                    android:id="@+id/tvSettleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bd23fss2342"
                    android:textColor="@color/base_orange" />

                <TextView
                    android:id="@+id/tvSettleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="status"
                    android:textColor="@color/base_black_333333" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_gray" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工单创建方："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvApplyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环途"
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建于："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvApplyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-03-32"
                    android:textColor="@color/base_black_333333" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工单截止于："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-07-23"
                    android:textColor="@color/base_black_333333" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号信息" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="户名："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvBankAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="huantu"
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvBankAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="huantu_zhifubao"
                    android:textColor="@color/base_black_333333" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款时间："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvPayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-32-23"
                    android:textColor="@color/base_black_333333" />

                <Button
                    android:id="@+id/btnPay"
                    style="@style/BtnGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打款" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认收款于："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvReceiveTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-32-232"
                    android:textColor="@color/base_black_333333" />

                <Button
                    android:id="@+id/btnReceive"
                    style="@style/BtnGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认收款" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工单完成于："
                    android:textColor="@color/base_black_333333" />

                <TextView
                    android:id="@+id/tvCloseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-32-24"
                    android:textColor="@color/base_black_333333" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/base_gray" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <Button
                    android:id="@+id/btnShowOrders"
                    style="@style/BtnBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单列表" />

                <Button
                    android:id="@+id/btnAuditAuto"
                    style="@style/BtnBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="电脑审计" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp" >

                <Button
                    android:id="@+id/btnClose"
                    style="@style/BtnBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成工单" />
            </TableRow>
        </TableLayout>

        <!-- settle options -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp" >
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewSettleNew"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间："
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/base_black_333333" />

                <Button
                    android:id="@+id/btnEndTime"
                    style="@style/BtnBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-03-31" />
            </TableRow>

            <TableRow
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="备注："
                    android:textColor="@color/base_black_333333" />
                <com.globalways.csscli.view.ClearableEditText 
                    android:id="@+id/etComments"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:gravity="left|top"
                    android:inputType="textMultiLine"
                    />
                
            </TableRow>
            
            <TableRow
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <Button
                    android:id="@+id/btnNewSettle"
                    style="@style/BtnOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提交" />
                
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>