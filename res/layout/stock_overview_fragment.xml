<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >


        <EditText
            android:id="@+id/etBarCode"
            style="@style/EditTextStye"
            android:layout_width="300dp"
            android:layout_height="43dp"
            android:layout_marginStart="-50dp"
            android:layout_centerInParent="true"
            android:maxLength="20"
            android:textSize="18sp"
            android:hint="商品名称/条形码" />
        
        <Button
            style="@style/BtnBlue"
            android:id="@+id/btnSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/etBarCode"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="搜索" />

        <ImageView
            android:id="@+id/imageScanBarCode"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@id/etBarCode"
            android:layout_marginStart="-70dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_scan" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_title_height"
        android:background="@color/base_gray"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvBarcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="条码" />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="商品名称" />

        <TextView
            android:id="@+id/tvPurchasePrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="采购单价" />

        <TextView
            android:id="@+id/tvRetailPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="销售单价" />

        <TextView
            android:id="@+id/tvSalesCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="销售量" />

        <TextView
            android:id="@+id/tvStockCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="库存数量" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refreshListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:clickable="false"
        android:divider="@color/base_gray"
        android:dividerHeight="1px"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        ptr:ptrAnimationStyle="flip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/base_gray"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible" />

        <!-- 总库存量 -->

        <TextView
            android:id="@+id/tvStockTotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="库存数量" />

        <!-- 占用资金 -->

        <TextView
            android:id="@+id/tvStockFund"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/base_black_333333"
            android:text="占用资金" />
    </LinearLayout>

</LinearLayout>