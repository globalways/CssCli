<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/webViewStatistics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/base_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnStartDate"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_list_item_bg"
                    android:gravity="center"
                    android:text="2015-04-02 开始"
                    android:textColor="#333333" />

                <Button
                    android:id="@+id/btnEndDate"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_list_item_bg"
                    android:gravity="center"
                    android:text="2015-04-23 结束"
                    android:textColor="#333333" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_gray" />

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="销售金额"
                android:textColor="#333333" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_gray" />

            <TextView
                android:id="@+id/textDiscount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="优惠金额"
                android:textColor="#333333" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_gray" />

            <TextView
                android:id="@+id/textCount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="30dp"
                android:text="销售数量"
                android:textColor="#333333" />
        </LinearLayout>

        <ListView
            android:id="@+id/listRecord"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:divider="@color/base_gray"
            android:dividerHeight="1px" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#333333"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textTotalAmount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销售金额"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/textTotalDiscount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="优惠金额"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/textTotalCount"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销售数量"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>