<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_order_bg" >

                <TableLayout
                    android:id="@+id/viewStepOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:text="商品总价："
                            android:textColor="@color/base_black_333333" />

                        <TextView
                            android:id="@+id/textTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textStyle="bold" 
                            android:gravity="center_vertical"
                            android:textColor="@android:color/holo_orange_dark" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="优惠："
                            android:textColor="@color/base_black_333333" />

                        <com.globalways.csscli.view.ClearableEditText
                            android:id="@+id/editApr"
                            style="@style/EditNumStye"
                            android:digits=".0123456789"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="备注："
                            android:textColor="@color/base_black_333333" />

                        <com.globalways.csscli.view.ClearableEditText
                            android:id="@+id/editDesc"
                            style="@style/EditTextStye"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:gravity="top|left"
                            android:singleLine="false" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:text="订单总价："
                            android:textColor="@color/base_black_333333" />

                        <TextView
                            android:id="@+id/textSignTotalPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:text="￥56.00"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@color/selector_btn_gray"
                            android:text="取消"
                            android:textColor="@color/base_black_999999" />

                        <Button
                            android:id="@+id/btnNext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/selector_btn_orange"
                            android:text="确认订单（下一步）"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </TableLayout>

                <TableLayout
                    android:id="@+id/viewStepTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:text="订单号："
                            android:textColor="@color/base_black_333333" />

                        <TextView
                            android:id="@+id/textSignNum"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="15sp"
                            android:textStyle="bold" 
                            android:gravity="center_vertical" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:text="订单总价："
                            android:textColor="@color/base_black_333333" />

                        <TextView
                            android:id="@+id/textSignTotalPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:text="￥56.00"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="实收："
                            android:textColor="@color/base_black_333333" />

                        <com.globalways.csscli.view.ClearableEditText
                            android:id="@+id/editCash"
                            style="@style/EditNumStye"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits=".0123456789"
                            android:singleLine="false" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:text="找零："
                            android:textColor="@color/base_black_333333" />

                        <TextView
                            android:id="@+id/textKeepChange"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="￥0.00"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btnCancelSign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@color/selector_btn_gray"
                            android:text="取消订单"
                            android:textColor="@color/base_black_999999" />

                        <Button
                            android:id="@+id/btnComfirm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/selector_btn_orange"
                            android:text="确认收银"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </TableLayout>
            </FrameLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>