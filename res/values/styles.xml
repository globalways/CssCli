<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme.Normal" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Activity切换动画 -->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <!-- Activity样式 -->
    <style name="ActivityOuterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_white</item>
    </style>

    <!-- 进度条Dialog -->
    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- 二级Dialog动画 -->
    <style name="AnimationSecondLevelDialog">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
    
    <!-- 通用Dialog by wyp -->
    <style name="CommonDialogTheme" parent="Theme.AlertDialogPro.Material.Light">
	    <item name="alertDialogProStyle">@style/CommonDialogStyle</item>
	    <!-- base color -->
	    <item name="colorControlActivated">@color/base_orange</item>
	    <item name="android:windowBackground">@drawable/common_dialog_bacground</item>
	</style>
    
    <style name="CommonDialogStyle" parent="AlertDialogPro.Material.Light">
        <item name="adpLayout">@layout/common_dialog</item>
    </style>
    <!-- end -->
    
    <!-- popup menu -->
    
    <style name="Theme.WithPopupMenu" 
       parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:textColor">@color/base_black_333333</item>
	</style>
    
    <style name="Theme.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
    </style>
    
    
    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:radioButtonStyle">@style/MenuRadioButtonStyle</item>
    </style>
 
    <style name="MenuRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
    </style>
    
    
	<!-- end -->

    <style name="EditNumStye">
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/selector_edittext_bg</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_tb</item>
        <item name="android:layout_marginBottom">@dimen/edittext_margin_tb</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="EditTextStye">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/selector_edittext_bg</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_tb</item>
        <item name="android:layout_marginBottom">@dimen/edittext_margin_tb</item>
    </style>

    <style name="BtnBlue">
        <item name="android:background">@color/selector_btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <!-- add by wyp -->
    <style name="BtnOrange">
        <item name="android:background">@color/selector_btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="BtnGray">
        <item name="android:background">@color/selector_btn_gray</item>
        <item name="android:textColor">@color/base_black_333333</item>
    </style>
    <!-- end -->

    <style name="MainButtonStyle">
        <item name="android:background">@color/selector_main_btn_bg</item>
    </style>
    

</resources>