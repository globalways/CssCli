<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/base_black_999999" android:startColor="@color/base_black_999999" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="#F2F3F7" />

            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />

            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/green" android:startColor="@color/green" />
        </shape></item>

</selector>